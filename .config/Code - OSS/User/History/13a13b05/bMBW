buscaryt() {
  if [ -z "$1" ]; then
    echo "Uso: buscaryt t√©rmino_de_b√∫squeda"
    return 1
  fi

  echo "Buscando..."
  results=$(yt-dlp "ytsearch5:$*" --print "%(title)s | %(id)s" --quiet)

  if [ -z "$results" ]; then
    echo "No se encontraron resultados."
    return 1
  fi

  selected=$(echo "$results" | fzf --prompt="üé• Eleg√≠ un video: " --height=10 --layout=reverse --border)
  [ -z "$selected" ] && echo "‚ùå Cancelado." && return 1

  video_id="${selected##* | }"
  video_title="${selected%% | *}"

  echo "Reproduciendo: $video_title"
  (
  mpv --quiet --no-terminal --really-quiet \
      --ytdl-format="bv[height<=480]+ba/b[height<=480]" \
      --cache=yes --cache-secs=5 \
      "https://www.youtube.com/watch?v=$video_id"
  ) >/dev/null 2>&1 & disown

}


veryt() {
  if [ -z "$1" ]; then
    echo "Uso: buscaryt t√©rmino_de_b√∫squeda"
    return 1
  fi

  echo "üîç Buscando \"$*\"..."

  result=$(yt-dlp "ytsearch1:$*" --print "%(title)s | %(id)s" --quiet)

  if [ -z "$result" ]; then
    echo "‚ùå No se encontr√≥ ning√∫n video."
    return 1
  fi

  video_title="${result%% | *}"
  video_id="${result##* | }"

  echo "üé¨ Reproduciendo: $video_title"
  (
  mpv --quiet --no-terminal --really-quiet \
      --ytdl-format="bv[height<=480]+ba/b[height<=480]" \
      --cache=yes --cache-secs=5 \
      "https://www.youtube.com/watch?v=$video_id"
  ) >/dev/null 2>&1 & disown

}


